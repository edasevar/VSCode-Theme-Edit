{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"lib": [
			"ES2022"
		],
		"moduleResolution": "node",
		"outDir": "dist",
		"rootDir": ".",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"types": [
			"node",
			"vscode"
		],
		"typeRoots": [
			"./node_modules/@types"
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"tests/**",
		"node_modules/**"
	]
}
