{
	"compilerOptions": {
		"target": "ES2022",
		"lib": [
			"ES2022"
		],
		"module": "CommonJS",
		"moduleResolution": "Node",
		"outDir": "out",
		"rootDir": ".",
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"types": [
			"vscode"
		]
	},
	"include": [
		"src/**/*",
		"assets/template.json"
	]
}
