{
	"name": "theme-lab",
	"displayName": "Theme Lab",
	"description": "Design, preview, import/export VS Code themes with live preview, element navigation, and #RRGGBBAA alpha support.",
	"publisher": "edasevar",
	"version": "1.1.0",
	"engines": {
		"vscode": "^1.102.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:themeLab.open"
	],
	"main": "./dist/src/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "themeLab.open",
				"title": "Theme Lab: Open"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run build",
		"build": "tsc -p tsconfig.build.json",
		"watch": "tsc -w -p tsconfig.build.json",
		"lint": "eslint . --ext .ts",
		"format": "prettier -w .",
		"test": "tsc -p tsconfig.tests.json && mocha --ui tdd --timeout 10000 --colors ./dist-tests/tests/**/*.test.js",
		"clean": "rimraf dist dist-tests"
	},
	"devDependencies": {
		"@types/adm-zip": "0.5.7",
		"@types/mocha": "10.0.10",
		"@types/node": "24.2.0",
		"@types/vscode": "^1.102.0",
		"eslint": "9.32.0",
		"eslint-config-prettier": "10.1.8",
		"eslint-plugin-import": "2.32.0",
		"jsonc-parser": "3.3.1",
		"mocha": "11.7.1",
		"prettier": "3.6.2",
		"rimraf": "6.0.1",
		"typescript": "5.9.2",
		"vscode-test": "1.6.1"
	},
	"dependencies": {
		"adm-zip": "0.5.16",
		"vscode": "^1.1.37"
	}
}
